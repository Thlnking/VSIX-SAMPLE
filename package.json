{
  "name": "vsix-sample",
  "displayName": "vsix-sample",
  "description": "一个个人的测试插件",
  "version": "0.13.0",
  "publisher": "yasuo",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "process-explorer",
          "title": "Node 进程管理器",
          "icon": "media/Xbb.svg"
        }
      ]
    },
    "views": {
      "process-explorer": [
        {
          "id": "NPM",
          "name": "npm-process"
        },
        {
          "id": "XBB-DEV",
          "name": "xbb-dev-process"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "NPM.refreshEntry",
          "group": "navigation@1"
        }
      ]
    },
    "commands": [
      {
        "command": "vsix-sample.ToolTip",
        "title": "提示当前项目的git账号信息",
        "shortTitle": "git账号信息"
      },
      {
        "command": "vsix-sample.insertVariable",
        "title": "添加console.log 打印语句",
        "shortTitle": "console语句"
      },
      {
        "command": "NPM.refreshEntry",
        "title": "Refresh",
        "icon": {
          "light": "media/icon-dark.svg",
          "dark": "media/icon-light.svg"
        }
      }
    ],
    "keybindings": [
      {
        "command": "vsix-sample.ToolTip",
        "key": "shift+alt+i",
        "mac": "shift+cmd+i"
      },
      {
        "command": "vsix-sample.insertVariable",
        "key": "shift+alt+l",
        "mac": "shift+cmd+l",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "pnpm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.71.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "ini": "^3.0.1",
    "shelljs": "^0.8.5"
  }
}
